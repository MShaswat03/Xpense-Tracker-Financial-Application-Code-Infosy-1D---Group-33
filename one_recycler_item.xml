<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:background="?selectableItemBackground"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:backgroundTint="@color/white"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/priority_one"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/green_shape"
        android:layout_gravity="end"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/note_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"
            android:text="your note here" />

        <TextView
            android:id="@+id/category_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"
            android:layout_below="@+id/note_one"
            android:text="Category" />

        <TextView
            android:id="@+id/amount_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_one"
            android:text="200"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_one"
            android:layout_alignRight="@+id/amount_one"
            android:text="05 Feb 2024 04:45AM"
            android:layout_alignParentRight="true"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>